{% extends "::base.html.twig" %}
{% block body %}
    <br/>
    <div class="row ">     
        <div class="col-lg-10 center-block">
            <div class="panel panel-primary">
      
                <div class="panel-heading">
                    <h3 class="panel-title"><i class="glyphicon glyphicon-cog"></i> Type </h3>
                </div>
                {{ form_start(form) }}
                <div class="panel-body">
                    <div class="col-lg-12">
                        <div class="col-lg-6">                            
                            <div class="panel panel-info">
                                    <div class="panel-heading">
                                        <h3 class="panel-title"><i class="fa fa-laptop"></i> Ajout </h3>
                                    </div>

                                        {{ form_widget(form.ajtype, {'attr': {'class': 'form-control'}}) }}

                                        {{ form_widget(form.ajouter, {'attr': {'class': 'btn btn-success glyphicon glyphicon-plus'}}) }}

                                        <br>
                                         <br>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="col-lg-12">
                                <div class="panel panel-info">

                                        <div class="panel-heading">
                                            <h3 class="panel-title"><i class="fa fa-laptop"></i> Suppression </h3>
                                        </div>          
                                        <div class="col-lg-6">
                                            {{ form_widget(form.types, {'attr': {'class': 'form-control'}}) }}
                                        </div>
                                            {{ form_widget(form.supprimer, {'attr': {'class': 'col-lg-1 btn btn-danger glyphicon glyphicon-remove'}}) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
